
@{
    ViewBag.Title = "MentorList";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Instituition List</title>
    <!--CSS bundle Link-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <table class=" table table-dark">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Address</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Password</th>
                <th scope="col">Photo</th>
                <th scope="col">Gender</th>
                <th scope="col">Institution</th>
                <th scope="col">Valid</th>
                <th></th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <th scope="row">@i.Id</th>
                    <td>@i.Name</td>
                    <td>@i.Address</td>
                    <td>@i.Email</td>
                    <td>@i.Phone</td>
                    <td>@i.Password</td>
                    <td>@i.Photo</td>
                    <td>@i.Gender</td>
                    <td>@i.Institution</td>


                    <td>
                        @{ var a = "Yes";
                            a = i.IsValid;

                            if (string.Compare(a,"Yes")==0)
                            {
                                <h6 class="bg-success text-center">@i.IsValid</h6>
                                <a href="~/AdminMentor/MentorActivate/@i.Id" class="btn btn-success">Activate Account</a>
                                <a href="~/AdminMentor/MentorDeactivate/@i.Id" class="btn btn-warning">Restrict Account</a>
                            }
                            else
                            {
                                <h6 class="bg-danger text-center">@i.IsValid</h6>

                                <a href="~/AdminMentor/MentorActivate/@i.Id" class="btn btn-success">Activate Account</a>
                                <a href="~/AdminMentor/MentorDeactivate/@i.Id" class="btn btn-warning">Restrict Account</a>

                            }

                        }

                    </td>
                    <td class="bg-success"><a href="~/AdminMentor/MentorUpdate/@i.Id" class="btn btn-primary">Update</a></td>
                    <td><a href="~/AdminMentor/MentorDelete/@i.Id" class="btn btn-danger">Delete</a></td>

                </tr>
            }

        </tbody>
    </table>







    <!--JS bundle Link-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>

