
@{
    ViewBag.Title = "Revenue";
}

<h2>Revenue</h2>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Instituition List</title>
    <!--CSS bundle Link-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <section class="container shadow-lg ">
        <div>

       
            <div class="card-group  ">
                <div class="card m-5 shadow-sm">
                    <img style="height:300px" src="https://images.unsplash.com/photo-1638913658642-8f22bae3335b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h2 class="card-title">Total Earning</h2>
                        <h1 class="card-text text-success"><b>@ViewBag.sellingAmount</b> BDT</h1>

                    </div>
                </div>
                <div class="card m-5 shadow-sm">
                    <img style="height:300px" src="https://images.unsplash.com/photo-1520607162513-77705c0f0d4a?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1169&q=80" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h2 class="card-title">My Earning</h2>
                        <h1 class="card-text text-warning"><b>@ViewBag.myEarning</b> BDT</h1>

                    </div>
                </div>
                <div class="card m-5 shadow-sm">
                    <img style="height:300px" src="https://images.unsplash.com/photo-1523050854058-8df90110c9f1?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h2 class="card-title">Varsities Earning</h2>
                        <h1 class="card-text text-danger"><b>@ViewBag.varsityEarning</b> BDT</h1>

                    </div>
                </div>
            </div>


        </div>
    </section>


    <section class="container mt-5">
        <div>
            <table class=" table table-Success">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    {
                        <tr>
                            <th scope="row">@i.Id</th>
                            <td>@i.Name</td>
                           
                            <td>
                                <a href="~/AdminRevenue/InstitutionRevenue/@i.Id" class="btn btn-success">See Details</a>
                                      
                             </td>

                            
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </section>


    <!--JS bundle Link-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
