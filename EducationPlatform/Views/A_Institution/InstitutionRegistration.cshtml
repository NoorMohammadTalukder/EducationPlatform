

@{
    ViewBag.Title = "InstitutionRegistration";
}

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title></title>
</head>
<body>
    <header>


        
        <center>
            <h2>Institution Registration</h2>
            <br />
            <div class="col-lg-3"></div>
            <div class="col-lg-6">

                <form action="" method="post">

                    <tr>
                        <td>Name:</td>
                        <td>
                            <input type="text" name="Name" value="@(Model != null ? Model.Name : " ")" class="form-control" />
                            @Html.ValidationMessage("Name", new { @class = "text-danger" }) <br />
                        </td>
                    </tr>
                    <tr>

                        <td>Address</td>
                        <td>
                            <input type="text" name="Address" value="@(Model != null ? Model.Address : " ")" class="form-control" />
                            @Html.ValidationMessage("Address", new { @class = "text-danger" })<br />
                        </td>
                    </tr>
                    <tr>
                        <td>Email:</td>

                        <td>
                            <input type="text" name="Email" value="@(Model != null ? Model.Email : " ")" class="form-control" />
                            @Html.ValidationMessage("Email", new { @class = "text-danger" })<br />
                        </td>
                    </tr>
                    <tr>
                        <td>Phone:</td>

                        <td>
                            <input type="text" name="Phone" value="@(Model != null ? Model.Phone : " ")" class="form-control" />
                            @Html.ValidationMessage("Phone", new { @class = "text-danger" })<br />
                        </td>
                    </tr>
                    <tr>
                        <td>Password:</td>

                        <td>
                            <input type="text" name="Password" value="@(Model != null ? Model.Password : " ")" class="form-control" />
                            @Html.ValidationMessage("Password", new { @class = "text-danger" })<br />
                        </td>
                    </tr>
                    <tr>
                        <td>Website:</td>

                        <td>
                            <input type="text" name="WebsiteLink" value="@(Model != null ? Model.WebsiteLink : " ")" class="form-control" />
                            @Html.ValidationMessage("WebsiteLink", new { @class = "text-danger" }) <br />
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><input type="submit" class="btn btn-success" /></td>
                    </tr>

                </form>

            </div>
            <div class="col-lg-3"></div>
        </center>
    </header>
</body>
</html>




