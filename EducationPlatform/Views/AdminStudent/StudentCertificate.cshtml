
@{
    ViewBag.Title = "StudentCertificate";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Instituition List</title>
    <!--CSS bundle Link-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <table class=" table table-dark">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Recomender Name</th>
                <th scope="col">Recomernder Id</th>
                <th scope="col">Applier Id</th>
                <th scope="col">Course Id</th>
                <th scope="col">Status</th>
                <th scope="col">Comments</th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <th scope="row">@i.Id</th>
                    <td>@i.RecomendBy</td>
                    <td>@i.RecommderId</td>
                    <td>@i.ApplierId</td>
                    <td>@i.CourseId</td>
                    <td>@i.Status</td>
                    <td>@i.Comments</td>
                    <td>

                        @{ if (i.Status == "Pending")
                            {
                               
                                <a href="~/AdminStudent/ApproveCertificate/@i.Id" class="btn btn-primary">Approved Certificate</a>
                                
                            }
                            else
                            {
                                
                            <a href="~/AdminStudent/ApproveCertificate/@i.Id" class="btn btn-primary disabled">Approved Certificate</a>
                               
                            }
                        }



                        <br />

                    </td>

                </tr>
            }

        </tbody>
    </table>







    <!--JS bundle Link-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>

