
@{
    ViewBag.Title = "M_MentorStudentCertificate";
}
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title></title>
</head>
<body>
    <a class="btn btn-success  text-uppercase fw-bolder" href="~/M_Mentor/M_MentorInformation" role="button">BACK</a>

    <a class="btn btn-danger  text-uppercase fw-bolder" href="~/M_Mentor/M_MentorLogOut" role="button">LOGOUT</a>
    <center>
        <h2 class=" text-uppercase fw-light-bolder">StudentCertificate</h2>
        <div class="col-lg-4 shadow p-3 mb-5 bg-body rounded">
            <form action="" method="post">

                <input type="text" name="Comments" value="@(Model !=null ? Model.Comments:" ")" class="form-control text-uppercase text-center fw-bolder" placeholder="Comment" />
                @Html.ValidationMessage("Comments", new { @class = "text-danger" })
                <input type="date" name="Date" value="@(Model !=null ? Model.Date:" ")" class="form-control text-uppercase text-center fw-bolder" placeholder="DATE" />
                @Html.ValidationMessage("Date", new { @class = "text-danger" })
                <br />
                <button type="submit" class="btn shadow btn-success">Submit</button>

            </form>
        </div>
    </center>
</body>
</html>