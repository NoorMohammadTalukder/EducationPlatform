
@{
    ViewBag.Title = "InstitutionList";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Instituition List</title>
    <!--CSS bundle Link-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <table class=" table table-dark">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Address</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Website Link</th>
                <th scope="col" class="text-center">Valid</th>
                <th scope="col">Logo</th>
                <th scope="col"></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <th scope="row">@i.Id</th>
                    <td>@i.Name</td>
                    <td>@i.Address</td>
                    <td>@i.Email</td>
                    <td>@i.Phone</td>
                    <td>@i.WebsiteLink</td>
                    <td>

                        @{ if (i.IsValid == "Yes")
                            {
                                <h6 class="bg-success">@i.IsValid</h6>
                                <a href="~/AdminInstitution/InstitutionActivate/@i.Id" class="btn btn-success">Activate Account</a>
                                <a href="~/AdminInstitution/InstitutionDeactivate/@i.Id" class="btn btn-warning">Restrict Account</a>
                            }
                            else
                            {
                                <h6 class="bg-danger">@i.IsValid</h6>
                                <a href="~/AdminInstitution/InstitutionActivate/@i.Id" class="btn btn-success">Activate Account</a>
                                <a href="~/AdminInstitution/InstitutionDeactivate/@i.Id" class="btn btn-warning">Restrict Account</a>
                            }
                        }



                        <br />

                    </td>

                    <td>@i.Photo</td>
                    <td><a href="~/AdminInstitution/InstitutionUpdate/@i.Id" class="btn btn-primary">Update</a></td>
                    <td><a href="~/AdminInstitution/InstitutionDelete/@i.Id" class="btn btn-danger">Delete</a></td>
                </tr>
             }
           
        </tbody>
    </table>







    <!--JS bundle Link-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>

