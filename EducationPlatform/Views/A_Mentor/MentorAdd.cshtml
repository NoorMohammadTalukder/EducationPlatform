
@{
    ViewBag.Title = "MentorAdd";
}
<html>
<head>
    <a class="btn btn-danger" href="~/A_Institution/Index" role="button">BACK</a>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title></title>
</head>
<body>
    <header>
        <center>

            <h2>Add Mentor</h2>
            <br />
            <div class="col-lg-3"></div>
            <div class="col-lg-6">
                <form action="" method="post">

                    <h4>Name</h4>  <input type="text" value="@(Model!= null ? Model.Name:"")" name="Name"
                                          class="form-control" placeholder="Name" />
                    @Html.ValidationMessage("Name", new { @class = "text-danger" }) <br />

                    <h4>Address</h4>  <input type="text" value="@(Model!= null ? Model.Address:"")" name="Address"
                                             class="form-control" placeholder="Address" />
                    @Html.ValidationMessage("Address", new { @class = "text-danger" }) <br />


                    <h4>Email</h4>  <input type="email" value="@(Model != null ? Model.Email:" ")" name="Email"
                                           class=" form-control" placeholder="Email" />
                    @Html.ValidationMessage("Email", new { @class = "text-danger" }) <br />

                    <h4>Phone</h4>  <input type="text" value="@(Model != null ? Model.Phone:" ")" name="Phone"
                                           class=" form-control" placeholder="Phone" />
                    @Html.ValidationMessage("Phone", new { @class = "text-danger" }) <br />

                    <h4>Password</h4>  <input type="password" name="Password"
                                              class=" form-control" placeholder="Password" />
                    @Html.ValidationMessage("Password", new { @class = "text-danger" }) <br />

                    <h4>Gender</h4>  <input type="text" value="@(Model != null ? Model.Gender:"")" name="Gender"
                                            class=" form-control" placeholder="Gender" />
                    @Html.ValidationMessage("Gender", new { @class = "text-danger" }) <br />

                    <br />
                    <button type="submit" class="btn btn-success">Submit</button>
                </form>
            </div>
            <div class="col-lg-3"></div>
        </center>
        </header>
    </body>
</html>

